//tsconfig.json para produccion
{
    "include": ["./src/**/*.ts"],       //Archivo origen
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "dist/scripts",
        "target": "ES6",
        "module": "CommonJS",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "strict": true,
    }
}